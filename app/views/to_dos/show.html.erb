<div class="container text-center">
  <div class="row mt-5 mb-5">
    <div class="col-12">
      <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action active">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">Task Details</h5>
          </div>
        </a>
        <%= link_to edit_to_do_url(@to_do), class: "list-group-item list-group-item-action text-left" do %>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= @to_do.title %></h5>
          </div>
          <p class="mb-1"><%= @to_do.description %></p>
          <% if @to_do.status == 0 %>
            <div class="text-danger">
          <% else %>
            <div class="text-primary">
          <% end %>
            <p class="mb-1"><%= @to_do.due_date.localtime.strftime('%b %Y - %H:%M ') %></p>
          </div>
          <%= form_for @to_do, method: :put do |f| %>
            <%= f.hidden_field :status, value: 1 %>
            <%= f.submit "Complete", class:"btn btn-primary mb-1" %>
          <% end %>
          <%= button_to "Delete", { action: "destroy", id: @to_do.id },
            method: :delete, data: { confirm: "Are you sure you want to permanently delete this task?" },
            class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-5 mb-5">
    <div class="col-12">
      <%= link_to "BACK", :calendar, class:"btn btn-outline-success" %>
    </div>
  </div>
</div>
