<%= form_for(@to_do, url: { action: params[:action] == "edit" ? "update" : "create" }) do |f| %>
  <% if @to_do.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@to_do.errors.count, "error") %> prohibited change!</h5>
      <ul>
      <% @to_do.errors.full_messages.each do |msg| %>
        <li class="error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, placeholder: "Title", required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description, placeholder: "Enter a description here..", required: true, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "form-label" %>
    <%= f.datetime_field :due_date, required: true, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit "SUBMIT", class: 'btn btn-primary' %>

  <%= link_to "BACK", to_dos_url, class:"btn btn-outline-success" %>
<% end %>
