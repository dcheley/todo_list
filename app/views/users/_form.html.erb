<%= form_for(@user, url: { action: params[:action] == "edit" ? "update" : "create" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@user.errors.count, "error") %> prohibited change!</h5>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class="error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password", required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "form-control" %>
  </div>

  <%= f.submit "SUBMIT", class: 'btn btn-primary' %>
<% end %>
